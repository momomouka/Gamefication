<%= render "shared/errors", obj: @member %>

<table class="attr">
  <tr>
    <th><%= form.label :name, "氏名" %></th>
    <td><%= form.text_field :name %></td>
  </tr>
  <tr>
    <th>性別</th>
    <td>
      <%= form.radio_button :gender, 0 %>
      <%= form.label :gender_0, "男" %>
      <%= form.radio_button :gender, 1 %>
      <%= form.label :gender_1, "女" %>
    </td>
  </tr>
  <tr>
    <th><%= form.label :birthday, "誕生日", for: "member_birthday_1i" %></th>
    <td><%= form.date_select :birthday,
              start_year: 1940, end_year: Time.now.year,
              use_month_numbers: true %></td>
  </tr>
  <tr>
    <th><%= form.label :email, "メールアドレス" %></th>
    <td><%= form.email_field :email %></td>
  </tr>
  <tr>
  <tr>
    <th><%= form.label :passname, "ログインID" %></th>
    <td><%= form.text_field :passname %></td>
  </tr>
  <tr>
    <th><%= form.label :password, "パスワード" %></th>
    <td><%= form.password_field :password %></td>
  </tr>
  <tr>
    <th><%= form.label :password_confirmation, "パスワードの確認" %></th>
    <td><%= form.password_field :password_confirmation %></td>
  </tr>
</table>
<% unless @member.new_record? %>
<p>パスワードを変更しないときは、パスワード入力欄を空にしてください。</p>
<% end %>

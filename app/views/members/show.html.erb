<% @page_title = "実験協力者の詳細" %>

<h1><%= @page_title %></h1>


<table class="attr">
  <tr>
    <th>氏名</th>
    <td><%= @member.name %></td>
  </tr>
  <tr>
    <th>性別</th>
    <td><%= @member.gender == 0 ? "男" : "女" %></td>
  </tr>
  <tr>
    <th>誕生日</th>
    <td><%= @member.birthday.try(:strftime, "%Y年%m月%d日") %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @member.email %></td>
  </tr>
  <tr>
    <th>ログインID</th>
    <td><%= @member.passname %></td>
  </tr>
</table>
